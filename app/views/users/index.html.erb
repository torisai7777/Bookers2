
  <p id="notice"></p>


    <div class="container px-5 px-sm-0">
      <%= render 'books/error', model: @book %>
  <div class="row">

    <div class="col-md-3">
      <%= render 'users/user', user: current_user %>
      <%= render 'users/edit', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/book', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">

	  	  <h2>Users</h2>
	  	  <table class="table">
	  	  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  	  	<tbody>

  	  	  <% @users.each do |user| %>
	  	  	<tr>
	  	  	  <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50,fallback: "no_image.jpg"%></td>
	  	  	  <td><%= user.name %></td>
	  	  	  <td><%= link_to "Show", "/users/#{user.id}" %></td>
	  	  	</tr>
  	  	  <% end %>




  	  	</tbody>
  	  </table>
  	</div>
  </div>
</div>